{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2023"],
    "moduleResolution": "node",
    "outDir": "./dist-server",
    "rootDir": ".",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["server.ts", "generate-db.ts"],
  "exclude": ["node_modules", "dist", "src"]
}